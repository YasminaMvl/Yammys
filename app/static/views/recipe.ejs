<link rel="stylesheet" href="/css/recipe.css">

<!-- Inclure le header -->
<% include partials/header.ejs %>

<!-- Afficher la recette -->
<div class="recipe-card">
    <!-- Afficher l'image de la recette -->
    <img class="recipe-image" src="<%= recette.image %>" alt="<%= recette.titre %>">
    <!-- Afficher le titre de la recette -->
    <h2 class="recipe-title"><%= recette.titre %></h2>

    <!-- Afficher les ingrédients de la recette -->
    <h3>Ingrédients :</h3>
    <ul class="recipe-ingredients">
        <% recette.ingredients.forEach(function(ingredient) { %>
        <li><%= ingredient %></li>
        <% }) %>
    </ul>

    <!-- Afficher les instructions de la recette -->
    <h3>Instructions :</h3>
    <ol class="recipe-instructions">
        <% recette.instructions.forEach(function(instruction) { %>
        <li><%= instruction %></li>
        <% }) %>
    </ol>
</div>

<!-- Inclure le footer -->
<% include partials/footer.ejs %>