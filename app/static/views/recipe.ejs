<link rel="stylesheet" href="/css/recipe.css">

<%- include('partials/header') %>


<!-- Afficher la recette -->
<div class="recipe-card">
    <!-- Afficher l'image de la recette -->
    <img class="recipe-image" src="/images/<%= recipe.image %>" alt="<%= recipe.title %>">

    <!-- Afficher le titre de la recette -->
    <h2 class="recipe-title"><%= recipe.title %></h2>

    <!-- Afficher les ingrédients de la recette -->
    <h3>Ingrédients :</h3>
    <ul class="recipe-ingredients">
        <% ingredientsArray.forEach(function(ingredient) { %>
        <li><%= ingredient.trim() %></li>
        <% }) %>
    </ul>

    <!-- Afficher les instructions de la recette -->
    <h3>Instructions :</h3>
    <ol class="recipe-instructions">
        <% instructionsArray.forEach(function(instruction) { %>
        <li><%= instruction %></li>
        <% }) %>
    </ol>

  
</div>



  <%- include('partials/footer') %>